{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "credentials/**/*.ts",
    "nodes/**/*.ts",
    "index.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
